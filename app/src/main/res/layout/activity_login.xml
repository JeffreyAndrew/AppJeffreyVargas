<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jevar.appjeffreyvargas.view.LoginActivity"
    android:background="#7dacde">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtUserLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:ems="10"
            android:hint="Username or Email" />

        <EditText
            android:id="@+id/txtPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUserLogin"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Password"
            android:password="true" />

        <Button
            android:id="@+id/btnLogInLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="#4b82bc"
            android:text="Log In"
            android:textColor="@android:color/background_light"
            android:onClick="validate"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnLogInLogin"
            android:layout_alignParentTop="true"
            android:layout_marginTop="69dp"
            android:src="@drawable/ic_run" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
